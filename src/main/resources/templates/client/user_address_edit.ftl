<!DOCTYPE><html><head>    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">    <title>修改收货地址</title></head><link rel="shortcut icon" href="/client/images/tianya.ico"><link rel="stylesheet" type="text/css" href="/client/css/base.css"><link rel="stylesheet" type="text/css" href="/client/css/common.css"><link rel="stylesheet" type="text/css" href="/client/css/index.css"><link rel="stylesheet" type="text/css" href="/client/css/person_center.css"><script type=text/javascript src="/client/js/jquery.min.js"></script><script type=text/javascript src="/client/js/jquery-1.11.0.js"></script><script src="/client/js/Validform_v5.3.2_min.js"></script><script type=text/javascript src="/client/js/rich_lee.js"></script><script type="text/javascript">$(document).ready(function(){    //初始化表单验证	$("#form1").Validform({        tiptype: 3    });   });</script><body><!-- header开始 --><#include "/client/common_header.ftl" /><!-- header结束 --><!-- ********************中间内容******************** --><div class="percenter_com my_colection">    <#include "/client/common_user_header.ftl" />		<#include "/client/common_user_menu.ftl" />        <!-- **********中间-右边********** -->    <div class="body_right">        <div class="right_title">修改收货地址</div>        <div class="add_address">        <form action="/user/address/save" method="post" id="form1">        	<#if address??><input type="hidden" name="id" value="${address.id!c}"></#if>            <div class="add_item">                <span>所在地区<font>*</font></span>                <div class="in_item">                    <select name="">                        <option value="中国大陆">中国大陆</option>                    </select>                    <input type="text" name="province" class="txt_address" placeholder="请填写省市区" <#if address??>value="${address.province!''}"</#if>>                </div>            </div>            <div class="add_item">                <span>详细地址<font>*</font></span>                <div class="in_item">                    <textarea name="detailAddress" placeholder="建议您如实填写详细收货地址，例如街道名称，门牌号码，楼层和房间号等信息。"  datatype="*"><#if address??>${address.detailAddress!''}</#if></textarea>                    <span class="Validform_checktip" style="color: red;"></span>                </div>            </div>            <div class="add_item">                <span>收货人姓名<font>*</font></span>                <div class="in_item">                    <input type="text" name="receiverName" style="width: 205px;" placeholder="长度不超过25个字符" datatype="s0-25" <#if address??>value="${address.receiverName!''}"</#if>>                    <span class="Validform_checktip" style="color: red;"></span>                </div>            </div>            <div class="add_item">                <span>手机号码</span>                <div class="in_item">                    <select>                        <option value="1">中国大陆 +86</option>                    </select>                    <input type="text" name="receiverMobile" style="width: 205px;" placeholder="电话号码、手机号码必须填一项" datatype="m" <#if address??>value="${address.receiverMobile!''}"</#if>>                    <span class="Validform_checktip" style="color: red;"></span>                </div>            </div>            <div class="add_item">                <span>电话号码</span>                <div class="in_item">                    <select>                        <option value="1">中国大陆 +86</option>                    </select>                    <input type="text" name="receiverTeleAreaCode" style="width: 75px;" placeholder="区号" <#if address??>value="${address.receiverTeleAreaCode!''}"</#if>>-                    <input type="text" name="receiverTelephone" style="width: 75px;" placeholder="电话号码" <#if address??>value="${address.receiverTelephone!''}"</#if>>-                    <input type="text" name="" style="width: 75px;" placeholder="分机">                </div>            </div>           <!-- <div class="add_item">                <span>&nbsp;</span>                <div class="in_item">                    <label><input type="checkbox" name="isDefaultAddress" checked/>设置为默认收货地址</label>                </div>            </div>            -->            <input type="submit"  class="btn_save" value="保存">		</form>        </div>    </div>    <!-- **********中间-右边-结束********** --></div><!-- ********************中间内容-结束******************** --><div class="h20"></div><#include "/client/common_footer.ftl" /></body></html>