<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"><head>    <meta charset="UTF-8">    <title>特产订单提交</title>    </head>	<link rel="shortcut icon" href="/client/images/tianya.ico">	<link rel="stylesheet" type="text/css" href="/client/css/base.css">    <link rel="stylesheet" type="text/css" href="/client/css/common.css">    <link rel="stylesheet" type="text/css" href="/client/css/f_cruise.css">    <script src="/client/js/jquery-1.11.0.js" type="text/javascript"></script>    <script src="/client/js/rich_lee.js" type="text/javascript"></script>    <script src="/client/js/Validform_v5.3.2_min.js"></script>    <script type="text/javascript" src="/client/js/layout.js"></script>    <script type="text/javascript">        window.onload = function () {            act_nav();        };                $(document).ready(function(){		    //初始化表单验证			$("#form1").Validform({		        tiptype: 3	    	});	    	//焦点移除事件	    	$("#count").change(function(){				var count=$("#count").val();				var price=$("#price").text();				var totalPrice=count*price;				$("#totalPrice").text(totalPrice);								var isDiscount = $("#dr").val();				if(isDiscount != "no"){					$("#disPrice").removeAttr("hidden");					$("#discountPrice").text(totalPrice*isDiscount);				}											});						$("#11").mouseenter(function(){				var totalPrice=$("#totalPrice").text();                $("#totalPrice1").val(totalPrice);            });		});				function form1submit(){			document.getElementById("form1").submit();		}								var a=0;	var code11=0;	function couponChange()	{		    var couponFee = parseFloat($("#couponSelect option:selected").attr("fee"));	    	    if (undefined == couponFee)	    {	        couponFee = 0.00;	    }		var couponFeeee = parseFloat(couponFee);		var price111 = $("#discountPrice").html();		var price1111 = parseFloat(price111);		$("#couponFeee").html(couponFeeee);				if(a==0){			var totalPrice111=price1111-couponFeeee;			code11 = couponFeeee;			a=1;		}		else{			var totalPrice111=price1111-couponFeeee+code11;			code11 = couponFeeee;		}		$("#discountPrice").html(totalPrice111);  				var couponId111 = $("#couponSelect").val(); 		$("#couponId").val(couponId111);		 	}		    </script><body><#include "/client/common_header.ftl" /><!-- ********************中间内容Start******************** --><div class="wrapper">    <!-- 订单信息-->    <div class="order_info margin_top">        <h1>您的订单信息</h1>        <!-- 产品简述-->        <form id="form3" action="/order/ordersubmit" method="post">        	<#if goods??><input type="hidden" name="goodsId" value="${goods.id!c}"></#if>       	 	<input type="hidden" name="totalPrice" id="totalPrice1" value="">       	 	<input type="hidden" name="couponId" id="couponId" value="">        	<div class="product_desc">            	<div class="left_desc">                	<div class="d_title">                    	<a href="#" class="title" <#if goods??>title="${goods.title!''} "</#if>><#if goods??>${goods.title!''}</#if> </a><a href="javascript:history.go(-1);" class="check_detail">查看产品详情 >></a>                	</div>                	<div class="d_items">                    	<div class="d_item">                        	<label>已选规格：<font><font id="price">${special_price?string("0.00")}</font>元</font></label>                       	 	<label> 数量：<font><input type="text" onkeydown="return checkNumber(event);" id="count" name="shopId" placeholder="请输入数字" value=""><#if goods?? && goods.categoryIdTree?contains("[31]")||goods.categoryIdTree?contains("[32]")> 斤<#elseif goods.categoryIdTree?contains("[33]")||goods.categoryIdTree?contains("[34]")> 盒或瓶<#else>件</#if></font></label>                    	</div>                	</div>                	<div class="d_items">                    	<div class="d_item">                        	<label>备注：<input type="text" name="remarkInfo" class="remark" id="remark1"> </label>                    	</div>                	</div>                	<div class="d_items">                    	<h3>选择收货地址：</h3>                    	<#if addressList??>	                    <div class="d_item">	                        <span class="default"></span><label>	                        <select name="shippingAddress">		                        	                    		<#list addressList as item>		                        	<option>${item.province!''}&nbsp;&nbsp;${item.detailAddress!''}&nbsp; (${item.receiverName!''} 收)&nbsp; ${item.receiverMobile}</option>	                        	</#list>                    				                        <select></label>	                    </div>	                    </#if>                    	<div class="d_item w100">                        	<span class="default">&nbsp;</span><a href="javascript:;" onclick="$('.address_warp').stop(false,true).show();" class="update_date">+使用新地址</a>                    	</div>                	</div>            	</div>        	</div>        	<div class="order_total_price">            <label>总计：<font><font id="totalPrice">0</font>元</font></label><br>            <input type="text" name="dr" id="dr"  value="<#if discountRatio??>${discountRatio}<#else>no</#if>" hidden="hidden">            <label id="disPrice" hidden="hidden">折后价：<font><font id="discountPrice"></font>元</font></label>        	</div>        	        	        	<hr/><br/>			<div class="car_pay">	            <span class="mr10 inblock" style="width:100px;">优惠券</span>           		            <select id="couponSelect" name="couponId" onchange="couponChange();">		                <#if coupon_list??>		                	<option value="" fee="0">不使用优惠券</option>		                    <#list coupon_list as item>		                        <option value="${item.id?c}" fee="${item.price!''}">${item.typeTitle!''}</option>		                    </#list>		                </#if>		            </select>&nbsp;&nbsp;	            <span class="red">抵用金额：￥<b id="couponFeee" style="color:red">0.00</b></span>        	</div>			<br/>        	<div class="div_submit">           	 	<a href="javascript:;" id="11" name="submit1" onclick="document.getElementById('form3').submit();">提交订单</a>        	</div>		</form>    </div>    <!-- 清除页面浮动-->    <span class="clear"></span></div><div class="w100 address_warp">    <div class="wrapper">        <div class="add_address">            <a href="javascript:;" class="a_close" onclick="$('.address_warp').stop(false,true).hide();">关闭×</a>            <h3>添加收货地址</h3>            <form id="form1" action="/address/save" method="post">            <#if goods??><input type="hidden" name="goodsId" value="${goods.id!c}"></#if>	            <span class="tips"><font>新增收货地址</font>电话号码、手机号选填一项，其余均为必填项</span>	            <div class="add_item">	                <span>所在地区<font>*</font></span>	                <div class="in_item">	                    <select>	                        <option value="1">中国大陆</option>	                    </select>	                    <input type="text" class="txt_address" datatype="*" name="province" placeholder="请填写省市区">	                </div>	            </div>	            <div class="add_item">	                <span>详细地址<font>*</font></span>	                <div class="in_item">	                    <textarea placeholder="建议您如实填写详细收货地址，例如街道名称，门牌号码，楼层和房间号等信息。" datatype="*" name="detailAddress"></textarea>	                </div>	            </div>	            <div class="add_item">	                <span>收货人姓名<font>*</font></span>	                <div class="in_item">	                    <input type="text" name="receiverName" style="width: 205px;" datatype="s0-25" placeholder="长度不超过25个字符">	                </div>	            </div>	            <div class="add_item">	                <span>手机号码</span>	                <div class="in_item">	                    <select>	                        <option value="1">中国大陆 +86</option>	                    </select>	                    <input type="text" style="width: 205px;" name="receiverMobile" datatype="m" placeholder="电话号码、手机号码必须填一项">	                </div>	            </div>	            <div class="add_item">	                <span>电话号码</span>	                <div class="in_item">	                    <select>	                        <option value="1">中国大陆 +86</option>	                    </select>	                    <input type="text" name="receiverTeleAreaCode" style="width: 75px;" placeholder="区号">-	                    <input type="text" name="receiverTelephone" style="width: 75px;" placeholder="电话号码">-	                    <input type="text" name="" style="width: 75px;" placeholder="分机">	                </div>	            </div>	            <div class="add_item">	                <span>&nbsp;</span>	                <div class="in_item">	                    <label><input type="checkbox" name="isDefaultAddress" checked/>设置为默认收货地址</label>	                </div>	            </div>	            	            <a class="btn_save" href="javascript:void(0);" name="submit" onclick="form1submit()">保存</a>	            <!--<input type="submit" value="提交"/>-->            </form>        </div>    </div></div><!-- ********************中间内容End******************** --><#include "/client/common_footer.ftl" /></body></html>